{
  "name": "fluent-reader",
  "version": "1.1.3",
  "description": "Modern desktop RSS reader",
  "main": "./dist/electron.js",
  "scripts": {
    "build": "webpack --config ./webpack.config.js",
    "electron": "electron ./dist/electron.js",
    "start": "npm run build && npm run electron",
    "format": "prettier --write .",
    "cert": "electron-builder create-self-signed-cert -p Riffer",
    "package-win": "electron-builder -w appx:x64",
    "package-win-ci": "electron-builder -w --x64 -p never && electron-builder -w --ia32 -p never",
    "package-mac": "electron-builder --mac --x64",
    "package-mas": "bash build/resignAndPackage.sh",
    "package-linux": "electron-builder --linux --x64 -p never"
  },
  "keywords": [],
  "author": "Haoyuan Liu",
  "license": "BSD-3-Clause",
  "repository": "github:yang991178/fluent-reader",
  "devDependencies": {
    "@fluentui/react": "^8.109.4",
    "@types/lovefield": "^2.1.4",
    "@types/nedb": "^1.8.13",
    "@types/react": "^16.14.41",
    "@types/react-dom": "^16.9.19",
    "@types/react-redux": "^7.1.25",
    "@yang991178/rss-parser": "^3.8.1",
    "electron": "^24.3.1",
    "electron-builder": "^24.4.0",
    "electron-react-devtools": "^0.5.3",
    "electron-store": "^8.1.0",
    "electron-window-state": "^5.0.3",
    "office-ui-fabric-react": "^7.204.0",
    "font-list": "^1.4.5",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^4.5.2",
    "js-md5": "^0.7.3",
    "lovefield": "^2.1.12",
    "nedb": "^1.8.0",
    "prettier": "2.8.8",
    "qrcode.react": "^3.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-intl-universal": "^2.6.15",
    "react-redux": "^8.0.5",
    "redux": "^4.2.1",
    "redux-devtools": "^3.7.0",
    "redux-thunk": "^2.4.2",
    "reselect": "^4.1.8",
    "ts-loader": "^8.4.0",
    "typescript": "^5.0.4",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "underscore": "^1.13.6"
  },
  "win": {
    "certificateFile": "./Riffer.pfx",
    "certificatePassword": "yellow01",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "build/icon.png",
    "certificateSubjectName": "Interactive Knowledge, Inc",
    "signingHashAlgorithms": [
      "sha256"
    ],
    "publisherName": "Interactive Knowledge, Inc",
    "signAndEditExecutable": true
  }
}
